#:import NoTransition kivy.uix.screenmanager.NoTransition
<vsetko>:
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                id: nazad
                app_icon: 'ikony/icon.png'
                title: 'OsMap'
                with_previous: False if obrazovky.current == 'hlavna' else True
                on_release: root.nastav_obrazovku('hlavna')
            ActionLabel:
                id: stavzoznamumap
                text: 'zoznam map nie je aktualizovany'
            ActionOverflow:
                ActionButton:              
                    text: 'Aktualizuj'
                    on_release: root.zozenzoznam()
                ActionButton:
                    text: 'Nastavenia'
                    on_release: root.spravnastavenia()
    ScreenManager:
        id: obrazovky
        transition: NoTransition()
        Screen:
            id: hlavna
            name: 'hlavna'
            GridLayout:
                size_hint_y: 0.9
                cols: 1
                padding: "8dp"
                Accordion:
                    orientation: 'vertical'
                    AccordionItem:
                        collapse: False
                        title: 'Vyber typu'
                        ListView:
                            id: vybertyp
                    AccordionItem:
                        title: 'Vyber kontinentu'
                        ListView:
                            id: vyberkontinent
                    AccordionItem:
                        title: 'Vyber krajiny'
                        ListView:
                            id: vyberkrajinu
        Screen:
            id: obrazovka_nastaveni
            name: 'nastavenia'
            AnchorLayout:
                size_hint_y: 0.9
                pos_hint: {'center_x':0.5}
                id: lejaut_nastaveni
                
                
                
<Chyba>:
    GridLayout:
        cols: 1
        padding: '8dp'
        spacing: '8dp'
        Image:
            source: 'ikony/icon.png'
            pos_hint: {'center_x': 0.5, 'top':1}
        Label:
            id: sprava
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: '[size=48][b]OsMap[/b] - chyba[/size]\n\n%s\nOK ukonci aplikaciu.'
            pos_hint: {'center_x': 0.5, 'center_y':0.4}       
            markup: True
            
        Button:
            text: 'OK'
            size_hint_x: 0.1
            size_hint_y: 0.2
            on_release: app.stop()
