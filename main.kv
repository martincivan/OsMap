#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import ListItemButton kivy.uix.listview.ListItemButton

<vsetko>:
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                id: nazad
                app_icon: 'ikony/icon.png'
                title: 'OsMap'
                with_previous: False if obrazovky.current == 'hlavna' else True
                on_release: root.nastav_obrazovku('hlavna')
            ActionButton:
                text: 'Stiahni'
                background_color:[0.17578125, 0.57421875, 0.72265625]
                id: stiahni
            ActionLabel:
                id: stavzoznamumap
                text: 'zoznam map nie je aktualizovany'
            ActionOverflow:
                ActionButton:              
                    text: 'Aktualizuj'
                    on_release: root.zozenzoznam()
                ActionButton:
                    text: 'Nastavenia'
                    on_release: root.spravnastavenia()
    ScreenManager:
        id: obrazovky
        transition: NoTransition()
        Screen:
            id: hlavna
            name: 'hlavna'
            GridLayout:
                size_hint_y: 0.9
                cols: 1
                padding: "8dp"
                Accordion:
                    orientation: 'vertical'
                    AccordionItem:
                        collapse: False
                        title: 'Vyber krajiny'
                        id: vyber_krajiny_acc
                        GridLayout:
                            orientation: 'horizontal'
                            rows: 2
                            cols: 1
                            TextInput:
                                id: hladaj
                                multiline: False
                                size_hint_y: 0.1
                                font_size: self.height - 10
                                hint_text: 'Hladaj'
                                on_text: root.hladaj()
                                disabled: True
                            RecycleView:
                                id: vyberkrajinu
                                viewclass: 'Zobrazenie'
                                SelectableRecycleBoxLayout:
                                    id: lejaut_kontinentov
                                    pri_vybere: root.vyberkrajinu
                                    default_size: None, dp(56)
                                    default_size_hint: 1, None
                                    size_hint_y: None
                                    height: self.minimum_height
                                    orientation: 'vertical'
                    AccordionItem:
                        title: 'Vyber typu'
                        id: vyber_typu_acc
                        disabled: True
                        RecycleView:
                            id: vybertypu
                            viewclass: 'Zobrazenie'
                            SelectableRecycleBoxLayout:
                                id: lejaut_krajin
                                default_size: None, dp(56)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical' 
                                multiselect: True
                                touch_multiselect: True
        Screen:
            id: obrazovka_nastaveni
            name: 'nastavenia'
            AnchorLayout:
                size_hint_y: 0.9
                pos_hint: {'center_x':0.5}
                id: lejaut_nastaveni
<Zobrazenie>:
    size_hint: (1, None)
    text: root.typ
    font_size: 0
    orientation: 'vertical'
    BoxLayout:
        canvas:
            Color:
                rgb: (0.17578125, 0.57421875, 0.72265625) if root.selected else (0.3, 0.3, 0.3)
            RoundedRectangle:
                size: self.size
                pos: self.pos
        padding: "5dp"
        orientation: 'vertical'
        GridLayout:
            cols: 2
            spacing: "10dp"
            Image:
                source: 'ikony/iconka.png' if root.selected else root.ikona
                size_hint_x: None
                width: self.height
                pos_hint: {'center_y' : 0.5}
            GridLayout:
                cols: 2
                rows: 2
                Label:
                    text: root.nadpis
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    bold: True
                    font_size: dp(16)
                Label:
                    size_hint_x: 0.3
                    text: root.velkost
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                Label:
                    text: root.popis
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                Label:
                    size_hint_x: 0.3
                    text: root.datum
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'

    BoxLayout:
        size_hint_y: None
        height: "2dp"

<Chyba>:
    GridLayout:
        cols: 1
        padding: '8dp'
        spacing: '8dp'
        Image:
            source: 'ikony/icon.png'
            pos_hint: {'center_x': 0.5, 'top':1}
        Label:
            id: sprava
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: '[size=48][b]OsMap[/b] - chyba[/size]\n\n%s\nOK ukonci aplikaciu.'
            pos_hint: {'center_x': 0.5, 'center_y':0.4}       
            markup: True
            
        Button:
            text: 'OK'
            size_hint_x: 0.1
            size_hint_y: 0.2
            on_release: app.stop()

            
            
            
